<style>
    :root {
        --primary-color: #2C3E50;  
        --secondary-color: #F2E3D5; 
        --accent-color: #E8AA42;   
        --bot-bg: #F8F9FA;         
        --user-bg: #2C3E50;        
        --text-dark: #333;
        --text-light: #fff;
    }
    
    body {
        background-color: var(--secondary-color);
        font-family: 'Poppins', sans-serif;
    }
    
    .chat-container {
        max-width: 600px;
        height: 80vh;
        margin: 40px auto;
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        border: 2px solid var(--accent-color);
        display: flex;
        flex-direction: column;
    }
    
    .chat-box {
        flex: 1;
        overflow-y: auto;
        border: 2px solid var(--accent-color);
        padding: 15px;
        border-radius: 10px;
        background-color: var(--bot-bg);
        display: flex;
        flex-direction: column;
        gap: 12px;
        scroll-behavior: smooth;
    }
    
    .chat-box::-webkit-scrollbar {
        width: 8px;
    }
    
    .chat-box::-webkit-scrollbar-thumb {
        background-color: var(--accent-color);
        border-radius: 5px;
    }
    
    .message {
        padding: 12px;
        border-radius: 10px;
        max-width: 75%;
        word-wrap: break-word;
        white-space: pre-wrap;
        font-size: 15px;
        animation: fadeIn 0.3s ease-in-out;
    }
    
    .user-message {
        background-color: var(--user-bg);
        color: var(--text-light);
        align-self: flex-end;
        border-radius: 18px 18px 0 18px;
        padding: 10px 14px;
    }
    
    .bot-message {
        background-color: white;
        color: var(--text-dark);
        border-radius: 18px 18px 18px 0;
        align-self: flex-start;
        padding: 10px 14px;
        border-left: 4px solid var(--accent-color);
    }
    
    .bot-heading {
        font-weight: bold;
        font-size: 22px;
        color: var(--primary-color);
        text-align: center;
        position: relative;
        margin-bottom: 10px;
    }
    
    .bot-heading::after {
        content: "";
        width: 60px;
        height: 3px;
        background: var(--accent-color);
        display: block;
        margin: 5px auto;
        border-radius: 5px;
    }
    
    .loading {
        display: none;
        font-style: italic;
        color: #777;
    }
    
    .input-group {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }
    
    .input-group input {
        flex: 1;
        border-radius: 8px;
        padding: 12px;
        font-size: 15px;
        border: 2px solid var(--primary-color);
        outline: none;
        transition: 0.3s;
    }
    
    .input-group input:focus {
        border-color: var(--accent-color);
        box-shadow: 0px 0px 8px var(--accent-color);
    }
    
  .btn-custom {
    background-color: transparent;
    border: 2px solid var(--accent-color);
    color: var(--primary-color);
    font-weight: bold;
    border-radius: 10px;
    padding: 12px 22px;
    font-size: 16px;
    transition: 0.3s;
}

.btn-custom:hover {
    background-color: var(--accent-color);
    color: white;
    border-color: var(--accent-color);
    box-shadow: 0px 0px 8px var(--accent-color);
}
    
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(5px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @media (max-width: 768px) {
        .chat-container {
            width: 90%;
            height: 75vh;
            padding: 15px;
        }
    }    
</style>
<style>
    .faq-container {
        width:75%;
        margin: 40px auto;
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        border: 2px solid var(--accent-color);
    }

    .faq-heading {
        text-align: center;
        font-size: 22px;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 15px;
    }

    .faq-item {
        border-bottom: 1px solid var(--accent-color);
        padding: 10px 0;
    }

    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: bold;
        color: var(--primary-color);
        cursor: pointer;
        padding: 10px;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .faq-question:hover {
        background: var(--bot-bg);
    }

    .faq-answer {
        display: none;
        padding: 10px;
        color: #555;
        font-size: 14px;
        line-height: 1.5;
    }

    .faq-icon {
        transition: transform 0.3s ease;
    }

    .faq-item.active .faq-answer {
        display: block;
    }

    .faq-item.active .faq-icon {
        transform: rotate(180deg);
    }
</style>

