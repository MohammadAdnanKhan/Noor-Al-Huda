        display: flex;
        justify-content: center;
        min-width: 280px;
    }

    .card {
        background: white;
        width: 100%;
        max-width: 350px;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        height: 100%;
        min-height: 480px; 
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    }

    .card img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 8px;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        min-height: 50px;
        margin-bottom: 10px;
    }

    .card-body a {
        display: block;
        padding: 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        width: 100%;
    }

    .open-btn {
        background: #0a6847;
        color: white;
        border: 2px solid #0a6847;
    }

    .download-btn {
        background: #ffb300;
        color: black;
        border: 2px solid #ffb300;
    }

    .link-btn {
        background: #1572a1;
        color: white;
        border: 2px solid #1572a1;
    }

    .card-body a:hover {
        opacity: 0.85;
    }

    @media (max-width: 1024px) {
        .book-card {
            width: calc(50% - 20px); 
        }
    }

    @media (max-width: 768px) {
        .book-card {
            width: 100%; 
        }
    }
</style>
