<script>
    document.addEventListener("DOMContentLoaded", function () {
        let defaultFilter = "english";    

        document.querySelectorAll(".book-card").forEach(card => {
            card.style.display = card.classList.contains(defaultFilter) ? "flex" : "none";
        });

        document.querySelectorAll(".filter-btn").forEach(btn => {
            btn.classList.remove("active");
            if (btn.getAttribute("data-filter") === defaultFilter) {
                btn.classList.add("active");
            }
        });

        document.querySelectorAll(".filter-btn").forEach(button => {
            button.addEventListener("click", () => {
                let filter = button.getAttribute("data-filter");

                document.querySelectorAll(".book-card").forEach(card => {
                    card.style.display = (filter === "all" || card.classList.contains(filter)) ? "flex" : "none";
                });

                document.querySelectorAll(".filter-btn").forEach(btn => btn.classList.remove("active"));
                button.classList.add("active");
            });
        });
    });
    
</script>


